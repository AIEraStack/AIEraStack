---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { 
  title, 
  description = 'Stop using libraries Sonnet doesn\'t know. Pick the right stack for the AI era.',
  ogImage = 'https://aierastack.com/og-image.png'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, 'https://aierastack.com');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="AI Era Stack" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen relative overflow-x-hidden">
    <!-- Background Effects -->
    <div class="fixed inset-0 bg-grid z-[-1] opacity-40 pointer-events-none"></div>
    <div class="fixed top-[-10%] left-[-10%] w-[40%] h-[40%] bg-purple-900/20 blur-[120px] rounded-full z-[-2]"></div>
    <div class="fixed bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-cyan-900/20 blur-[120px] rounded-full z-[-2]"></div>

    <header class="border-b border-[var(--border-color)] backdrop-blur-md sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 group">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-cyan-500 to-purple-500 flex items-center justify-center text-white font-bold text-lg shadow-lg shadow-cyan-500/20">
            A
          </div>
          <span class="text-xl font-bold tracking-tight text-white group-hover:text-cyan-400 transition-colors">
            AI Era Stack
          </span>
        </a>
        <div class="flex items-center gap-6">
          <a
            href="https://github.com/aierastack/aierastack"
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm font-medium text-[var(--text-muted)] hover:text-white transition-colors"
          >
            GitHub
          </a>
          <a
            href="https://x.com/AIEraStack"
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm font-medium text-[var(--text-muted)] hover:text-white transition-colors"
          >
            X
          </a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t border-[var(--border-color)] mt-24 bg-[var(--bg-card)]">
      <div class="max-w-7xl mx-auto px-6 py-12 text-center">
        <p class="text-[var(--text-muted)] mb-2">
          Stop using libraries AI doesn't know.
        </p>
        <p class="text-sm text-[var(--text-muted)] mb-4">
          Contact:
          <a
            href="mailto:aierastack@outlook.com"
            class="text-cyan-400 hover:text-cyan-300 transition-colors"
          >
            aierastack@outlook.com
          </a>
        </p>
        <p class="text-sm text-[var(--text-muted)] opacity-60">
          Â© {new Date().getFullYear()} AI Era Stack. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
