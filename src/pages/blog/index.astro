---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);

// Sort by date, newest first
const posts = allPosts.sort((a, b) =>
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);
---

<Layout
  title="Blog | AI Era Stack"
  description="Insights on AI-assisted development, library selection, and the future of coding with LLMs."
>
  <div class="max-w-6xl mx-auto px-6 py-16">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Blog
      </h1>
      <p class="text-xl text-[var(--text-muted)] max-w-2xl mx-auto">
        Insights on AI-assisted development, library selection, and the future of coding with LLMs.
      </p>
    </div>

    <!-- Posts Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="posts-grid">
      {posts.map((post) => (
        <article
          class="post-card group bg-[var(--bg-card)] border border-[var(--border-color)] rounded-2xl overflow-hidden hover:border-cyan-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/10 flex flex-col"
        >
          <!-- Card Image -->
          {post.data.image ? (
            <div class="aspect-video overflow-hidden">
              <img
                src={post.data.image}
                alt={post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
          ) : (
            <div class="aspect-video bg-gradient-to-br from-purple-900/40 to-cyan-900/40 flex items-center justify-center">
              <div class="text-4xl opacity-50">
                ✍️
              </div>
            </div>
          )}

          <!-- Card Content -->
          <div class="p-6 flex flex-col flex-1">
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-3">
              {post.data.tags.slice(0, 3).map((tag) => (
                <span class="px-2 py-1 text-xs rounded-full bg-[var(--bg-surface)] text-[var(--text-muted)]">
                  {tag}
                </span>
              ))}
            </div>

            <!-- Title -->
            <h2 class="text-xl font-semibold text-white mb-2 group-hover:text-cyan-400 transition-colors line-clamp-2">
              <a href={`/blog/${post.id}`} class="hover:underline">
                {post.data.title}
              </a>
            </h2>

            <!-- Description -->
            <p class="text-[var(--text-muted)] text-sm mb-4 line-clamp-3 flex-1">
              {post.data.description}
            </p>

            <!-- Footer -->
            <div class="flex items-center justify-between text-sm text-[var(--text-muted)] mt-auto pt-4 border-t border-[var(--border-color)]">
              <span>{post.data.author}</span>
              <time datetime={post.data.publishDate.toISOString()}>
                {post.data.publishDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </time>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Empty State -->
    {posts.length === 0 && (
      <div class="text-center py-20">
        <p class="text-[var(--text-muted)] text-lg">No posts yet. Check back soon!</p>
      </div>
    )}
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
