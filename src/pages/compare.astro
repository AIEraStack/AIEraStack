---
import Layout from '../layouts/Layout.astro';
import { getCachedRepo } from '../lib/data-loader';
import { LLM_CONFIGS } from '../lib/llm-configs';

export const prerender = false;

const url = new URL(Astro.request.url);
const reposParam = url.searchParams.get('repos') || '';
const env = Astro.locals?.runtime?.env;

const repoSlugs = reposParam
  .split(',')
  .map(s => s.trim())
  .filter(s => s.includes('/'))
  .slice(0, 5);

const repoDataPromises = repoSlugs.map(async (slug) => {
  const [owner, name] = slug.split('/');
  const cached = await getCachedRepo(owner, name, env);
  return { slug, owner, name, data: cached };
});

const repos = await Promise.all(repoDataPromises);
const validRepos = repos.filter(r => r.data !== null);

const defaultLlmId = 'gpt-5.2-codex';
const defaultLlm = LLM_CONFIGS.find(l => l.id === defaultLlmId);

function getGradeColor(grade: string): string {
  const colors: Record<string, string> = {
    A: 'text-green-400',
    B: 'text-lime-400', 
    C: 'text-yellow-400',
    D: 'text-orange-400',
    F: 'text-red-400',
  };
  return colors[grade] || 'text-slate-400';
}

function getGradeBg(grade: string): string {
  const colors: Record<string, string> = {
    A: 'bg-green-500/10 border-green-500/30',
    B: 'bg-lime-500/10 border-lime-500/30',
    C: 'bg-yellow-500/10 border-yellow-500/30',
    D: 'bg-orange-500/10 border-orange-500/30',
    F: 'bg-red-500/10 border-red-500/30',
  };
  return colors[grade] || 'bg-slate-500/10 border-slate-500/30';
}

const pageTitle = validRepos.length > 0 
  ? `Compare ${validRepos.map(r => r.name).join(' vs ')} - AI Era Stack`
  : 'Compare Libraries - AI Era Stack';
---

<Layout title={pageTitle} description="Compare AI compatibility scores across multiple libraries">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <a href="/" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors">
      ‚Üê Back to search
    </a>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Compare Libraries</h1>
      <p class="text-[var(--text-muted)]">See which libraries have better AI support for {defaultLlm?.name}</p>
    </div>

    <form class="glass-card p-6 rounded-2xl mb-8" method="GET" action="/compare">
      <label class="block text-sm font-medium text-white mb-2">
        Enter repositories to compare (comma-separated)
      </label>
      <div class="flex gap-3">
        <input
          type="text"
          name="repos"
          value={reposParam}
          placeholder="facebook/react, vuejs/core, sveltejs/svelte"
          class="flex-1 px-4 py-3 bg-black/30 border border-white/10 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:border-cyan-500/50 focus:ring-1 focus:ring-cyan-500/50"
        />
        <button
          type="submit"
          class="px-6 py-3 bg-gradient-to-r from-cyan-500 to-purple-500 text-white font-medium rounded-xl hover:opacity-90 transition-opacity"
        >
          Compare
        </button>
      </div>
      <p class="text-xs text-[var(--text-muted)] mt-2">
        Format: owner/repo ‚Äî max 5 repositories
      </p>
    </form>

    {validRepos.length === 0 && reposParam && (
      <div class="glass-card p-8 rounded-2xl text-center">
        <div class="text-4xl mb-4">üîç</div>
        <h2 class="text-xl font-bold text-white mb-2">No repositories found</h2>
        <p class="text-[var(--text-muted)]">
          Try searching for repositories in the format: owner/repo
        </p>
      </div>
    )}

    {validRepos.length === 0 && !reposParam && (
      <div class="glass-card p-8 rounded-2xl">
        <h2 class="text-xl font-bold text-white mb-4">Popular Comparisons</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <a href="/compare?repos=facebook/react,vuejs/core,sveltejs/svelte" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">Frontend Frameworks</div>
            <div class="text-sm text-[var(--text-muted)]">React vs Vue vs Svelte</div>
          </a>
          <a href="/compare?repos=vercel/next.js,remix-run/remix,withastro/astro" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">Meta Frameworks</div>
            <div class="text-sm text-[var(--text-muted)]">Next.js vs Remix vs Astro</div>
          </a>
          <a href="/compare?repos=prisma/prisma,drizzle-team/drizzle-orm" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">ORMs</div>
            <div class="text-sm text-[var(--text-muted)]">Prisma vs Drizzle</div>
          </a>
          <a href="/compare?repos=pmndrs/zustand,TanStack/query,reduxjs/redux-toolkit" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">State Management</div>
            <div class="text-sm text-[var(--text-muted)]">Zustand vs React Query vs Redux</div>
          </a>
        </div>
      </div>
    )}

    {validRepos.length > 0 && (
      <div class="space-y-6">
        <div class="grid gap-4" style={`grid-template-columns: repeat(${Math.min(validRepos.length, 3)}, 1fr)`}>
          {validRepos.map((repo) => {
            const score = repo.data?.scores[defaultLlmId];
            return (
              <a href={`/repo/${repo.slug}`} class="glass-card p-6 rounded-2xl hover:border-cyan-500/30 transition-colors">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="text-lg font-bold text-white">{repo.name}</h3>
                    <p class="text-sm text-[var(--text-muted)]">{repo.owner}</p>
                  </div>
                  {score && (
                    <div class={`px-3 py-2 rounded-xl border ${getGradeBg(score.grade)} text-center`}>
                      <div class={`text-2xl font-bold ${getGradeColor(score.grade)}`}>{score.overall}</div>
                      <div class={`text-xs font-medium ${getGradeColor(score.grade)}`}>Grade {score.grade}</div>
                    </div>
                  )}
                </div>
                
                <p class="text-sm text-[var(--text-muted)] mb-4 line-clamp-2">
                  {repo.data?.repo.description || 'No description'}
                </p>

                {score && (
                  <div class="space-y-2">
                    <div class="flex justify-between text-xs">
                      <span class="text-slate-400">Timeliness</span>
                      <span class="text-white">{score.timeliness.score}</span>
                    </div>
                    <div class="h-1.5 bg-white/10 rounded-full overflow-hidden">
                      <div class="h-full bg-gradient-to-r from-cyan-500 to-purple-500 rounded-full" style={`width: ${score.timeliness.score}%`}></div>
                    </div>
                    
                    <div class="flex justify-between text-xs">
                      <span class="text-slate-400">Popularity</span>
                      <span class="text-white">{score.popularity.score}</span>
                    </div>
                    <div class="h-1.5 bg-white/10 rounded-full overflow-hidden">
                      <div class="h-full bg-gradient-to-r from-cyan-500 to-purple-500 rounded-full" style={`width: ${score.popularity.score}%`}></div>
                    </div>
                    
                    <div class="flex justify-between text-xs">
                      <span class="text-slate-400">AI-Friendliness</span>
                      <span class="text-white">{score.aiFriendliness.score}</span>
                    </div>
                    <div class="h-1.5 bg-white/10 rounded-full overflow-hidden">
                      <div class="h-full bg-gradient-to-r from-cyan-500 to-purple-500 rounded-full" style={`width: ${score.aiFriendliness.score}%`}></div>
                    </div>
                    
                    <div class="flex justify-between text-xs">
                      <span class="text-slate-400">Community</span>
                      <span class="text-white">{score.community.score}</span>
                    </div>
                    <div class="h-1.5 bg-white/10 rounded-full overflow-hidden">
                      <div class="h-full bg-gradient-to-r from-cyan-500 to-purple-500 rounded-full" style={`width: ${score.community.score}%`}></div>
                    </div>
                  </div>
                )}

                <div class="flex gap-3 mt-4 pt-4 border-t border-white/5 text-xs text-[var(--text-muted)]">
                  <span>‚≠ê {repo.data?.repo.stars.toLocaleString()}</span>
                  <span>üç¥ {repo.data?.repo.forks.toLocaleString()}</span>
                  {repo.data?.npmInfo && (
                    <span>üì¶ {repo.data.npmInfo.weeklyDownloads.toLocaleString()}/wk</span>
                  )}
                </div>
              </a>
            );
          })}
        </div>

        <div class="glass-card p-6 rounded-2xl">
          <h2 class="text-lg font-bold text-white mb-4">Summary</h2>
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead>
                <tr class="border-b border-white/10">
                  <th class="text-left py-3 px-2 text-[var(--text-muted)] font-medium">Library</th>
                  <th class="text-center py-3 px-2 text-[var(--text-muted)] font-medium">Overall</th>
                  <th class="text-center py-3 px-2 text-[var(--text-muted)] font-medium">Timeliness</th>
                  <th class="text-center py-3 px-2 text-[var(--text-muted)] font-medium">Popularity</th>
                  <th class="text-center py-3 px-2 text-[var(--text-muted)] font-medium">AI-Friendly</th>
                  <th class="text-center py-3 px-2 text-[var(--text-muted)] font-medium">Community</th>
                </tr>
              </thead>
              <tbody>
                {validRepos
                  .sort((a, b) => (b.data?.scores[defaultLlmId]?.overall || 0) - (a.data?.scores[defaultLlmId]?.overall || 0))
                  .map((repo, index) => {
                    const score = repo.data?.scores[defaultLlmId];
                    return (
                      <tr class="border-b border-white/5">
                        <td class="py-3 px-2">
                          <div class="flex items-center gap-2">
                            {index === 0 && <span class="text-yellow-400">üèÜ</span>}
                            <a href={`/repo/${repo.slug}`} class="text-white hover:text-cyan-400 transition-colors">
                              {repo.name}
                            </a>
                          </div>
                        </td>
                        <td class="text-center py-3 px-2">
                          <span class={`font-bold ${getGradeColor(score?.grade || 'F')}`}>
                            {score?.grade} ¬∑ {score?.overall}
                          </span>
                        </td>
                        <td class="text-center py-3 px-2 text-white">{score?.timeliness.score}</td>
                        <td class="text-center py-3 px-2 text-white">{score?.popularity.score}</td>
                        <td class="text-center py-3 px-2 text-white">{score?.aiFriendliness.score}</td>
                        <td class="text-center py-3 px-2 text-white">{score?.community.score}</td>
                      </tr>
                    );
                  })}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>
