---
import Layout from '../layouts/Layout.astro';
import { getCachedRepo } from '../lib/data-loader';
import { CompareSection } from '../components/compare/CompareSection';
import type { CachedRepoData } from '../lib/types';

export const prerender = false;

async function fetchRepoFromApi(owner: string, name: string, request: Request): Promise<CachedRepoData | null> {
  try {
    const apiUrl = new URL('/api/repo', request.url);
    apiUrl.searchParams.set('owner', owner);
    apiUrl.searchParams.set('name', name);
    const response = await fetch(apiUrl);
    if (!response.ok) return null;
    return (await response.json()) as CachedRepoData;
  } catch {
    return null;
  }
}

const url = new URL(Astro.request.url);
const reposParam = url.searchParams.get('repos') || '';
const env = Astro.locals?.runtime?.env;

const repoSlugs = reposParam
  .split(',')
  .map(s => s.trim())
  .filter(s => s.includes('/'))
  .slice(0, 5);

const repoDataPromises = repoSlugs.map(async (slug) => {
  const [owner, name] = slug.split('/');
  let data = await getCachedRepo(owner, name, env);
  if (!data) {
    data = await fetchRepoFromApi(owner, name, Astro.request);
  }
  return { slug, owner, name, data };
});

const repos = await Promise.all(repoDataPromises);

const compareRepos = repos.map(r => ({
  slug: r.slug,
  owner: r.owner,
  name: r.name,
  initialData: r.data ?? null,
}));

const titleNames = compareRepos.map(r => r.name).filter(Boolean);
const pageTitle = titleNames.length > 0 
  ? `Compare ${titleNames.join(' vs ')} - AI Era Stack`
  : 'Compare Libraries - AI Era Stack';
const compareDescription = titleNames.length > 0
  ? `Compare ${titleNames.join(' vs ')} AI coding compatibility. See which library works best with Cursor, Codex & Claude.`
  : 'Compare libraries for AI coding compatibility. Find which frameworks work best with Cursor, Codex & Claude.';

// Generate ItemList JSON-LD for compare page (shows libraries being compared)
const itemListSchema = titleNames.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": `Compare ${titleNames.join(' vs ')}`,
  "description": compareDescription,
  "numberOfItems": compareRepos.length,
  "itemListElement": compareRepos.map((repo, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": repo.name,
    "url": `https://aierastack.com/repo/${repo.slug}`
  }))
} : null;

// Generate BreadcrumbList schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://aierastack.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Compare",
      "item": "https://aierastack.com/compare"
    }
  ]
};

const jsonLdSchemas = itemListSchema 
  ? [itemListSchema, breadcrumbSchema] 
  : [breadcrumbSchema];
---

<Layout title={pageTitle} description={compareDescription} noDefaultJsonLd={titleNames.length > 0}>
  {jsonLdSchemas.map((schema) => (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  ))}
  <div class="max-w-7xl mx-auto px-4 py-8">
    <a href="/" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors">
      ‚Üê Back to search
    </a>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Compare Libraries</h1>
      <p class="text-[var(--text-muted)]">See which libraries have better AI support across different models</p>
    </div>

    <form class="glass-card p-6 rounded-2xl mb-8" method="GET" action="/compare">
      <label class="block text-sm font-medium text-white mb-2">
        Enter repositories to compare (comma-separated)
      </label>
      <div class="flex gap-3">
        <input
          type="text"
          name="repos"
          value={reposParam}
          placeholder="facebook/react, vuejs/core, sveltejs/svelte"
          class="flex-1 px-4 py-3 bg-black/30 border border-white/10 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:border-cyan-500/50 focus:ring-1 focus:ring-cyan-500/50"
        />
        <button
          type="submit"
          class="px-6 py-3 bg-gradient-to-r from-cyan-500 to-purple-500 text-white font-medium rounded-xl hover:opacity-90 transition-opacity"
        >
          Compare
        </button>
      </div>
      <p class="text-xs text-[var(--text-muted)] mt-2">
        Format: owner/repo ‚Äî max 5 repositories
      </p>
    </form>

    {repoSlugs.length === 0 && reposParam && (
      <div class="glass-card p-8 rounded-2xl text-center">
        <div class="text-4xl mb-4">üîç</div>
        <h2 class="text-xl font-bold text-white mb-2">No repositories found</h2>
        <p class="text-[var(--text-muted)]">
          Try searching for repositories in the format: owner/repo
        </p>
      </div>
    )}

    {repoSlugs.length === 0 && !reposParam && (
      <div class="glass-card p-8 rounded-2xl">
        <h2 class="text-xl font-bold text-white mb-4">Popular Comparisons</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <a href="/compare?repos=facebook/react,vuejs/core,sveltejs/svelte" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">Frontend Frameworks</div>
            <div class="text-sm text-[var(--text-muted)]">React vs Vue vs Svelte</div>
          </a>
          <a href="/compare?repos=vercel/next.js,remix-run/remix,withastro/astro" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">Meta Frameworks</div>
            <div class="text-sm text-[var(--text-muted)]">Next.js vs Remix vs Astro</div>
          </a>
          <a href="/compare?repos=prisma/prisma,drizzle-team/drizzle-orm" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">ORMs</div>
            <div class="text-sm text-[var(--text-muted)]">Prisma vs Drizzle</div>
          </a>
          <a href="/compare?repos=pmndrs/zustand,TanStack/query,reduxjs/redux-toolkit" class="p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-colors border border-white/5">
            <div class="font-medium text-white">State Management</div>
            <div class="text-sm text-[var(--text-muted)]">Zustand vs React Query vs Redux</div>
          </a>
        </div>
      </div>
    )}

    {repoSlugs.length > 0 && (
      <CompareSection repos={compareRepos} client:load />
    )}
  </div>
</Layout>
