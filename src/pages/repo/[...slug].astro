---
import Layout from '../../layouts/Layout.astro';
import { RepoAnalyzer } from '../../components/repo/RepoAnalyzer';
import { getCachedRepo } from '../../lib/data-loader';
import { LLMComparison } from '../../components/repo/LLMComparison';
import { DimensionBreakdown } from '../../components/repo/DimensionBreakdown';
import { BadgeCopy } from '../../components/repo/BadgeCopy';
import { LLM_CONFIGS } from '../../lib/llm-configs';

export const prerender = false;

const { slug } = Astro.params;
const parts = slug?.split('/') || [];
const env = Astro.locals?.runtime?.env;

if (parts.length !== 2) {
  return Astro.redirect('/');
}

const [owner, name] = parts;
const cached = await getCachedRepo(owner, name, env);

const pageTitle = cached 
  ? `${cached.repo.name} - AI Era Stack`
  : `${owner}/${name} - AI Era Stack`;

const pageDescription = cached?.repo.description 
  ? `${cached.repo.description} - See how well AI models understand this project.`
  : `See how well AI models understand ${owner}/${name}`;

const defaultLlmId = 'gpt-5.2-codex';
const currentScore = cached?.scores[defaultLlmId];
const currentLlm = LLM_CONFIGS.find(l => l.id === defaultLlmId);
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="max-w-6xl mx-auto px-4 py-8">
    <a href="/" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors">
      ‚Üê Back to search
    </a>

    {cached ? (
      <div class="space-y-8">
        <div class="glass-card p-8 rounded-2xl">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-2">
                <h1 class="text-3xl font-bold text-white">{cached.repo.name}</h1>
                {cached.repo.language && (
                  <span class="px-2 py-0.5 text-xs font-medium bg-cyan-500/20 text-cyan-400 rounded-full">
                    {cached.repo.language}
                  </span>
                )}
              </div>
              <p class="text-[var(--text-muted)] mb-4 max-w-2xl">{cached.repo.description}</p>
              
              <div class="flex flex-wrap gap-4 text-sm">
                <a href={cached.sources.github} target="_blank" rel="noopener" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  {cached.repo.fullName}
                </a>
                {cached.sources.npm && (
                  <a href={cached.sources.npm} target="_blank" rel="noopener" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331zM10.665 10H12v2.667h-1.335V10z"/></svg>
                    {cached.npmPackage}
                  </a>
                )}
                <a href={cached.sources.releases} target="_blank" rel="noopener" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
                  üì¶ Releases
                </a>
              </div>
            </div>
            
            <div class="flex flex-col items-center justify-center p-6 bg-gradient-to-br from-cyan-500/10 to-purple-500/10 rounded-xl border border-white/5">
              {currentScore && (
                <>
                  <div class="text-6xl font-bold text-white mb-1">{currentScore.overall}</div>
                  <div class={`text-2xl font-bold ${currentScore.grade === 'A' ? 'text-green-400' : currentScore.grade === 'B' ? 'text-cyan-400' : currentScore.grade === 'C' ? 'text-yellow-400' : 'text-red-400'}`}>
                    Grade {currentScore.grade}
                  </div>
                  <div class="text-xs text-[var(--text-muted)] mt-1">for {currentLlm?.name}</div>
                </>
              )}
            </div>
          </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="glass-card p-4 rounded-xl text-center">
            <div class="text-2xl font-bold text-white">{cached.repo.stars.toLocaleString()}</div>
            <div class="text-xs text-[var(--text-muted)]">Stars</div>
          </div>
          <div class="glass-card p-4 rounded-xl text-center">
            <div class="text-2xl font-bold text-white">{cached.repo.forks.toLocaleString()}</div>
            <div class="text-xs text-[var(--text-muted)]">Forks</div>
          </div>
          <div class="glass-card p-4 rounded-xl text-center">
            <div class="text-2xl font-bold text-white">{cached.npmInfo?.weeklyDownloads?.toLocaleString() || 'N/A'}</div>
            <div class="text-xs text-[var(--text-muted)]">Weekly Downloads</div>
          </div>
          <div class="glass-card p-4 rounded-xl text-center">
            <div class="text-2xl font-bold text-white">{cached.releases[0]?.tagName || 'N/A'}</div>
            <div class="text-xs text-[var(--text-muted)]">Latest Release</div>
          </div>
        </div>

        <div class="glass-card p-6 rounded-2xl">
          <h2 class="text-xl font-bold text-white mb-6">LLM Comparison</h2>
          <LLMComparison scores={cached.scores} bestLLMId={defaultLlmId} client:load />
        </div>

        {currentScore && (
          <div class="glass-card p-6 rounded-2xl">
            <h2 class="text-xl font-bold text-white mb-6">Score Breakdown for {currentLlm?.name}</h2>
            <DimensionBreakdown score={currentScore} llmName={currentLlm?.name || defaultLlmId} client:load />
          </div>
        )}

        <BadgeCopy owner={owner} name={name} client:load />

        <div class="glass-card p-4 rounded-xl">
          <div class="flex items-center justify-between text-xs text-[var(--text-muted)]">
            <span>Data fetched: {new Date(cached.fetchedAt).toLocaleDateString()}</span>
            <div class="flex gap-4">
              <a href={cached.sources.github} target="_blank" rel="noopener" class="hover:text-cyan-400 transition-colors">GitHub ‚Üó</a>
              {cached.sources.npm && <a href={cached.sources.npm} target="_blank" rel="noopener" class="hover:text-cyan-400 transition-colors">npm ‚Üó</a>}
            </div>
          </div>
        </div>
      </div>
    ) : (
      <RepoAnalyzer client:load owner={owner} name={name} />
    )}
  </div>
</Layout>
